model User {
    id        String   @id @default(cuid())
    name      String?
    email     String   @unique
    phone     String   @unique
    password  String
    createdAt DateTime @default(now()) @map(name: "created_at")
    updatedAt DateTime @updatedAt @map(name: "updated_at")

    @@map(name: "users")
}

